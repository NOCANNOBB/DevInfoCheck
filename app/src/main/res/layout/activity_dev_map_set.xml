<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kenai.huafu.devinfocheck.DevMapSetActivity">


        <com.baidu.mapapi.map.MapView
            android:id="@+id/baidumapset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id = "@+id/id_marker_info"
            >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/viewfinder_mask"
                    >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:id="@+id/info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前设备ID："
                    android:textSize="65px"
                    android:textColor="@color/encode_view" />
                <TextView
                    android:id="@+id/info_devid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="65px"
                    android:textColor="@color/encode_view"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:text="当前经度："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/encode_view"
                    android:textSize="65px"
                    />
                <TextView
                    android:id="@+id/info_jd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="65px"
                    android:textColor="@color/encode_view"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:text="当前纬度："
                    android:layout_width="wrap_content"
                    android:textSize="65px"
                    android:layout_height="wrap_content"
                    android:textColor="@color/encode_view"

                    />
                <TextView
                    android:id="@+id/info_wd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="65px"
                    android:textColor="@color/encode_view"
                    />
                </LinearLayout>

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:text="确定"
                            android:id="@+id/mapConfirm"
                            />
                </LinearLayout>


        </RelativeLayout>

</android.support.constraint.ConstraintLayout>



